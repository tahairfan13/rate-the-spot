<%= form_for @comment, id: "new-comment", remote: true do |f| %>
  <%= f.hidden_field :post_id, :value => object.id %>
  <div class="form-group">
    <%= f.text_area :description, class: "comment-box", placeholder: "Type your comment..." %>
  </div>
  <div>
    <%= f.submit 'Comment', class:"btn bg-secondary m-0" %>
  </div>
<% end %>